<Window x:Class="Dusty_Jukebox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dusty_Jukebox"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid HorizontalAlignment="Stretch" Height="NaN" Margin="0,0,0,0" VerticalAlignment="Stretch" Width="NaN">
        <MediaElement x:Name="mediaElement" Margin="43,13,43,261" d:LayoutOverrides="HorizontalAlignment"/>
        <ListBox x:Name="listBox" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="32,233,481,54"/>
        <Button x:Name="_play_btn" Content="Play" Margin="485,233,243,171"/>
        <Button x:Name="_pause_btn" Content="Pause" Margin="485,268,243,141"/>
        <Button x:Name="_analyse_btn" Content="Analyse" Margin="485,301,243,92"/>
        <Slider x:Name="Volume" Minimum="0" Maximum="1" Value="0.5" TickFrequency="0.1" IsSnapToTickEnabled="True" Margin="485,347,243,54"/>

        <ProgressBar x:Name="Progress_bar" Minimum="0.1"             
        Margin="32,196,339,217" d:LayoutOverrides="HorizontalAlignment" Height="21"/>
        <Button x:Name="_open_btn" Content="Open" Margin="485,198,243,208" d:LayoutOverrides="VerticalAlignment"/>
        <TextBlock x:Name="_bpm_display" HorizontalAlignment="Center" Margin="0,237,0,0" TextWrapping="Wrap" FontWeight="Bold" FontSize="14" VerticalAlignment="Top" Height="33" Width="122"/>
        <TextBlock x:Name="_key_display" FontWeight="Bold" FontSize="14" Margin="339,264,339,153" TextWrapping="Wrap" d:LayoutOverrides="HorizontalAlignment"/>

    </Grid>
</Window>
